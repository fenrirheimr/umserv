include ../components/input-field.pug
include ../components/checkbox
include ../components/icon

footer.footer
    .footer-wrapper
        .footer-container
            .footer-content__row.py-5
                .footer-nav
                    each item in footerNav
                        .footer-nav__item.gy-3.mb-5
                            a.footer-nav__item__root_link(href=item.link)= item.title
                            ul.footer-nav__item-submenu.gy-2
                                each subitem in item.items
                                    li.footer-nav__item-submenu__item
                                        a.footer-nav__item-submenu__item__link(href=subitem.link)= subitem.title

                .footer-contacts
                    .footer-contacts__wrapper
                        .subscribe-form
                            .subscribe-form__title.mb-4 Подписаться на рассылку
                            form.form(method="" action="")
                                .form-fields-wrapper.mb-3
                                    +input-field("email", 'Email')
                                    button.button-submit(type="submit")
                                .form-checkbox-wrapper.gx-2
                                    +checkbox(true)
                                    .label
                                        | Я соглашаюсь с
                                        a(href="#") офертой
                                        |
                                        | и
                                        |
                                        a(href="#") условиями обработки персональных данных
                        .social-icons-wrapper.gx-3.mt-5.mb-7
                            each icon in icons
                                a(href="#")
                                    +icon(icon, "32")

                        .footer-contacts__data.gy-3
                            each item in contactsData
                                .footer-contacts__data-item
                                    -if (item.title && !item.copied)
                                        .item__title
                                            a(href=item.link)= item.title

                                    -if (item.copied)
                                        .item__description.copy-text(tabindex=1)= item.title

                                    -if (item.description)
                                        .item__description= item.description

            .footer-content__row.py-5
                .footer-content__block.gx-9
                    .footer-content__block__column.gy-2.first
                        img(src="/img/logo-footer.svg")
                        span.text Группа компаний «Умный сервис» прилагает все усилия, чтобы гарантировать точность и актуальность информации, представленной на этом сайте. Однако, мы не можем гарантировать абсолютную точность и полноту данных.
